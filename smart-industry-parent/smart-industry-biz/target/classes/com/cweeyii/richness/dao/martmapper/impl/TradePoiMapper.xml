<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.cweeyii.richness.dao.martmapper.TradePoiMapper">

    <sql id="Base_Column_List">
        poi_id,source
    </sql>

    <update id="batchInsertOrUpdate" parameterType="java.util.List">
        insert into trade_poi(poi_id,source)
        values
        <foreach collection="list" index="index" item="item" separator=",">
            (#{item.poiId}, #{item.source})
        </foreach>
        ON DUPLICATE KEY UPDATE
        poi_id=VALUES(poi_id), source=VALUES(source)
    </update>

    <select id="findByPoiId" resultType="com.cweeyii.richness.domain.TradePoi" parameterType="java.util.Map">
        select
        <include refid="Base_Column_List"/>
        from trade_poi
        where poi_id=#{poiId}
    </select>
</mapper>